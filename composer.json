{
    "name": "lugark/calendar-pdf-renderer",
    "type": "library",
    "description": "to generate pdf calendars with custom events & holidays",
    "license": "MIT",
    "require": {
        "ext-intl": "*",
        "php": "^8.1",
        "mpdf/mpdf": "^8.1",
        "aeon-php/calendar": "^1.0",
        "setasign/fpdf": "^1.8"
    },
    "require-dev": {
        "symfony/http-kernel": "^5.4 || ^6.0",
        "symfony/dependency-injection": "^5.4",
        "phpstan/phpstan": "^1.8",
        "symfony/phpunit-bridge": "^6.1 || ^7.0",
        "phpstan/phpstan-symfony": "^1.2"
    },
    "suggest": {
        "symfony/dependency-injection": "",
        "symfony/http-kernel": ""
    },
    "autoload": {
        "psr-4": {
            "Calendar\\Pdf\\Renderer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Calendar\\Pdf\\Renderer\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/simple-phpunit -c phpunit.xml.dist",
        "phpstan": "vendor/bin/phpstan analyze -c phpstan.neon --memory-limit 2G",
        "test": [
            "@phpstan",
            "@phpunit"
        ]
    }
}
